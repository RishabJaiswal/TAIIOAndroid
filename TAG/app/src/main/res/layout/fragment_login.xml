<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/grad_bg"
    android:layout_height="match_parent">


    <ImageView
        android:layout_marginTop="70dp"
        android:layout_marginBottom="40dp"
        android:id="@+id/iv_logo"
        android:layout_centerHorizontal="true"
        android:layout_width="200dp"
        android:layout_height="200dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_below="@id/iv_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <EditText
            android:id="@+id/et_username"
            android:inputType="number"
            android:padding="10dp"
            android:textColor="@color/colorwhite"
            android:background="@drawable/login_et_holder"
            android:textColorHint="#eaeaea"
            android:hint="10 Digit Mobile Number"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/et_password"
            android:inputType="textPassword"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:hint="Password"
            android:textColor="@color/colorwhite"
            android:background="@drawable/login_et_holder"
            android:textColorHint="#eaeaea"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_login"
            android:layout_marginTop="20dp"
            android:text="SIGN IN"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:textColor="@color/colorwhite"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/colordarkblue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_marginTop="10dp"
            android:text="By signing in, You agree to the following"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_eula"
            android:text="User License Agrement."
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="@color/colorlightblue"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:text="© 2018 - © copyright TAI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>