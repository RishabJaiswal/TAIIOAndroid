<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:padding="10dp"
        android:background="@color/colorlightblue"
        android:id="@+id/ll_filter_holder"
        android:layout_below="@id/ll_categoryholder"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/ll_filter_block"
            android:layout_marginTop="10dp"
            android:padding="20dp"
            android:background="@drawable/line_bg"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Spinner
                android:id="@+id/sp_suburb"
                android:padding="4dp"
                android:hint="Add Suburbs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <AutoCompleteTextView
                android:visibility="gone"
                android:inputType="text"
                android:maxLength="50"
                android:id="@+id/et_addlocation"
                android:layout_marginTop="6dp"
                android:padding="4dp"
                android:hint="Add Location"
                android:background="@color/colorwhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_location_note"
                android:visibility="gone"
                android:textSize="10dp"
                android:layout_marginTop="4dp"
                android:text="Note : Please add the area name(50 alphanumeric characters) only, the entire address is not required."
                android:layout_height="wrap_content"
                android:layout_width="match_parent"></TextView>

            <Button
                android:id="@+id/btn_addlocation"
                android:layout_marginTop="10dp"
                android:text="Add Location"
                android:textColor="@color/colorwhite"
                android:backgroundTint="@color/colordarkblue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_sel_filter"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:background="@color/colorlightblue"
                android:layout_marginLeft="30dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textStyle="bold"
                android:text="ADD LOCATION"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>