<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/colorwhite"
    android:layout_width="match_parent" android:layout_height="match_parent">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

        <LinearLayout
            android:weightSum="10"
            android:id="@+id/ll_header"
            android:background="@color/colorlightgrey"
            android:padding="4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_weight="1"
                android:src="@drawable/service_b"
                android:id="@+id/iv_cat_icon"
                android:padding="6dp"
                android:layout_width="40dp"
                android:layout_height="40dp" />

            <TextView
                android:layout_weight="7"
                android:id="@+id/tv_detailstitle"
                android:textAllCaps="true"
                android:textColor="@color/colordarkblue"
                android:textSize="20dp"
                android:text="My Details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:layout_weight="2"
                android:layout_gravity="right"
                android:id="@+id/btn_logout"
                android:drawableLeft="@drawable/logout_btn"
                android:text="LOGOUT"
                android:textColor="@color/colorwhite"
                android:backgroundTint="@color/colordarkblue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_below="@id/ll_header"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">




        <!--referred by-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputLayout
                android:layout_marginTop="10dp"
                android:id="@+id/input_layout_ref_by"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:textColor="@color/edit_texts"
                    android:id="@+id/input_ref_by"
                    android:inputType="text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Referred By" />

            </android.support.design.widget.TextInputLayout>


            <!--<Button-->
                <!--android:id="@+id/fab_view_requested_suggestions"-->
                <!--android:visibility="gone"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:text="ADD SUGGESTIONS"-->
                <!--android:textColor="@color/colorwhite"-->
                <!--android:backgroundTint="@color/colordarkblue"-->
                <!--android:layout_alignParentBottom="true"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content" />-->

        </RelativeLayout>



        <!--your name-->

        <android.support.design.widget.TextInputLayout
            android:layout_marginTop="10dp"
            android:id="@+id/input_layout_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:textColor="@color/edit_texts"
                android:id="@+id/input_name"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Your name" />

        </android.support.design.widget.TextInputLayout>


        <!--your number-->

        <android.support.design.widget.TextInputLayout
            android:layout_marginTop="10dp"
            android:id="@+id/input_layout_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:textColor="@color/edit_texts"
                android:id="@+id/input_number"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Your number" />

        </android.support.design.widget.TextInputLayout>


        <TextView
            android:id="@+id/tv_add_contact_list"
            android:visibility="gone"
            android:layout_marginLeft="4dp"
            android:textColor="@color/colordarkblue"
            android:text="My Contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!--home location-->

        <android.support.design.widget.TextInputLayout
            android:layout_marginTop="10dp"
            android:id="@+id/input_layout_homelocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <AutoCompleteTextView
                android:id="@+id/input_homelocation"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Home location" />

        </android.support.design.widget.TextInputLayout>


        <!--work location-->

        <android.support.design.widget.TextInputLayout
            android:layout_marginTop="10dp"
            android:id="@+id/input_layout_worklocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <AutoCompleteTextView
                android:id="@+id/input_worklocation"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Work location" />

        </android.support.design.widget.TextInputLayout>


        <!--School/College/Native location-->

        <android.support.design.widget.TextInputLayout
            android:layout_marginTop="10dp"
            android:id="@+id/input_layout_nativelocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <AutoCompleteTextView
                android:id="@+id/input_nativelocation"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="School/College/Native location" />

        </android.support.design.widget.TextInputLayout>

        <!--Professional Details-->

        <android.support.design.widget.TextInputLayout
            android:layout_marginTop="10dp"
            android:id="@+id/input_layout_prof_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:inputType="text"
                android:id="@+id/input_prof_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Professional Details" />

        </android.support.design.widget.TextInputLayout>

        <CheckBox
            android:id="@+id/cb_provide_suggestion"
            android:layout_marginTop="8dp"
            android:text="Allow Provide Suggestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <CheckBox
            android:id="@+id/cb_details_updated"
            android:layout_marginTop="8dp"
            android:text="Details updated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <Button
            android:id="@+id/btn_savedetails"
            android:layout_marginTop="10dp"
            android:text="SUBMIT"
            android:textColor="@color/colorwhite"
            android:backgroundTint="@color/colordarkblue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        </LinearLayout>


            </RelativeLayout>
        </ScrollView>


