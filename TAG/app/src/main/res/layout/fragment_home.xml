    <ScrollView
        android:background="@color/colorblue"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_upperblue_holder"
                android:background="@color/colorlightblue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="30dp">


                <LinearLayout
                    android:id="@+id/ll_contact_location_holder"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:id="@+id/contactus"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_marginRight="4dp"
                                android:src="@drawable/callon"
                                android:layout_width="20dp"
                                android:layout_height="20dp" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Contact Us" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/location"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <!--city selector-->
                            <LinearLayout
                                android:id="@+id/ll_city_selector"
                                android:layout_marginRight="10dp"
                                android:background="@drawable/blue_curve_bg"
                                android:layout_width="90dp"
                                android:gravity="center"
                                android:layout_height="36dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_cityname"
                                    android:padding="5dp"
                                    android:textSize="12dp"
                                    android:textColor="@color/colorwhite"
                                    android:text="Mumbai"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                                <ImageView
                                    android:layout_marginTop="2dp"
                                    android:src="@drawable/dd"
                                    android:layout_width="10dp"
                                    android:layout_height="10dp" />

                            </LinearLayout>


                            <!--sub-area selector-->
                            <LinearLayout
                                android:id="@+id/ll_sub_area_selector"
                                android:layout_marginRight="10dp"
                                android:background="@drawable/blue_curve_bg"
                                android:layout_width="90dp"
                                android:gravity="center"
                                android:layout_height="36dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_sub_area_name"
                                    android:padding="5dp"
                                    android:textSize="12dp"
                                    android:textColor="@color/colorwhite"
                                    android:text="Mumbai"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                                <ImageView
                                    android:layout_marginTop="2dp"
                                    android:src="@drawable/dd"
                                    android:layout_width="10dp"
                                    android:layout_height="10dp" />

                            </LinearLayout>


                            <ImageView
                                android:visibility="gone"
                                android:layout_marginRight="4dp"
                                android:src="@drawable/localon"
                                android:layout_width="20dp"
                                android:layout_height="20dp" />


                            <TextView
                                android:visibility="gone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Location" />

                        </LinearLayout>




                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_hangouts_holder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <LinearLayout
                            android:id="@+id/hangouts"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_centerHorizontal="true"
                            android:layout_margin="20dp"
                            android:background="@drawable/home_btn_hangouts">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">


                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:padding="20dp"
                                    android:src="@drawable/hangout_w" />

                            </RelativeLayout>


                        </LinearLayout>

                        <RelativeLayout
                            android:layout_centerHorizontal="true"
                            android:layout_margin="20dp"
                            android:layout_width="90dp"
                            android:layout_height="90dp">

                            <LinearLayout
                                android:background="@drawable/notification_badge"
                                android:padding="2dp"
                                android:minWidth="25dp"
                                android:gravity="center"
                                android:layout_alignParentRight="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:padding="2dp"
                                    android:id="@+id/tv_hangoutscount"
                                    android:text="0"
                                    android:textColor="@color/colorwhite"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />


                            </LinearLayout>

                        </RelativeLayout>


                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_others_holder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:id="@+id/services"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_margin="20dp"
                            android:background="@drawable/home_btn_services">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <LinearLayout
                                    android:background="@drawable/notification_badge"
                                    android:layout_alignParentRight="true"
                                    android:minWidth="25dp"
                                    android:gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:id="@+id/tv_servicescount"
                                        android:padding="4dp"
                                        android:text="10"
                                        android:textColor="@color/colorwhite"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" />
                                </LinearLayout>
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:padding="20dp"
                                    android:src="@drawable/service_w" />

                            </RelativeLayout>




                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/shopping"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_alignParentRight="true"
                            android:layout_margin="20dp"
                            android:background="@drawable/home_btn_shopping"
                            android:elevation="0dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <LinearLayout
                                    android:background="@drawable/notification_badge"
                                    android:layout_alignParentRight="true"
                                    android:minWidth="25dp"

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                                <TextView
                                    android:id="@+id/tv_shoppingcount"
                                    android:padding="4dp"
                                    android:text="10"
                                    android:textColor="@color/colorwhite"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                                </LinearLayout>

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:padding="20dp"
                                    android:src="@drawable/shopping_w" />

                            </RelativeLayout>


                        </LinearLayout>

                        <android.support.v7.widget.CardView
                            android:visibility="gone"
                            android:layout_width="120dp"
                            android:layout_height="30dp"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:backgroundTint="@color/colorlightgrey"
                            app:cardCornerRadius="6dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:text="1 2 3 " />
                            </RelativeLayout>

                        </android.support.v7.widget.CardView>

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="180dp">

                <ImageView
                    android:layout_marginLeft="30dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/feedback"
                    android:src="@drawable/details"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />

                <ImageView
                    android:layout_marginRight="30dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:id="@+id/help"
                    android:src="@drawable/help"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />

                <ImageView
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="14dp"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/mydetails"
                    android:src="@drawable/notif6"
                    android:layout_width="90dp"
                    android:layout_height="90dp" />

                <ImageView
                    android:layout_below="@id/mydetails"
                    android:layout_centerVertical="true"
                    android:layout_centerInParent="true"
                    android:id="@+id/ranking"
                    android:src="@drawable/ranking"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />



            </RelativeLayout>


        </LinearLayout>

    </ScrollView>

</RelativeLayout>